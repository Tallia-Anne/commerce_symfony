{% extends 'base.html.twig' %}

{% block title %}Filtre des produits{% endblock %}

{% block body %}

<div class="container">
    <h1>{{ subCategory.name }}</h1>

    <div class="row">
        {% for product in products %}
            <div class="col-md-3 mb-4">
                <a href="{{ path('app_product_show_detail', {'id': product.id}) }}">
                    <div class="card h-100">
                        <img src="{{ asset('uploads/images/' ~ product.image) }}" class="card-img-top" alt="image_produit" style="height: 12rem; object-fit: cover;">
                        <div class="card-body">
                            <h5 class="card-title text-decoration-none text-dark">{{ product.name }}</h5>
                            <p class="card-text mb-4 text-decoration-none text-dark">{{ product.description|slice(0, 50) }}...</p>
                              <h3 class='text-decoration-none text-dark pb-3' >{{product.price}} EUR </h3>
                            <a href="#" class="btn btn-primary">Ajouter au panier</a>
                        </div>
                    </div>
                </a>
            </div>
        {% endfor %}
    </div>

   

    




</div>

{% endblock %}
