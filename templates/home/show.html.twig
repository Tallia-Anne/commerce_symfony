{% extends 'base.html.twig' %}

{% block title %}Détail du Produit{% endblock %}

{% block body %}
<div class="container">
    <div class="row my-5">
        <div class="col-md-6">
            <img src="{{ asset('uploads/images/' ~ product.image) }}" class="img-fluid" alt="image_produit">
        </div>
        <div class="col-md-6">
            <div class="card h-100 border border-white ">
                <div class="card-body d-flex justify-content-center flex-column">
                    <h1 class="card-title">{{ product.name }}</h1>
                    <p class="card-text">{{ product.description }}</p>
                    <h4 class="card-price">{{ product.price }} €</h4>
                    <a href="#" class="btn btn-primary mt-3">Ajouter au panier</a>
                </div>
            </div>
        </div>
    </div>

    <h2 class="pb-4">Derniers produits ajoutés</h2>

    <div class="row">
        {% for product in products %}
            <div class="col-md-3 mb-4">
                <a href="{{ path('app_product_show_detail', {'id': product.id}) }}" class="text-decoration-none text-dark">
                    <div class="card h-100">
                        <img src="{{ asset('uploads/images/' ~ product.image) }}" class="card-img-top" alt="image_produit" style="height: 18rem; object-fit: cover;">
                        <div class="card-body">
                            <h5 class="card-title">{{ product.name }}</h5>
                            <p class="card-text">{{ product.description|slice(0, 50) }}...</p>
                            <a href="#" class="btn btn-primary mt-3">Ajouter au panier</a>
                        </div>
                    </div>
                </a>
            </div>
        {% endfor %}
    </div>
</div>
{% endblock %}
