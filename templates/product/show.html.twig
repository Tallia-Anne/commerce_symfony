{% extends 'base.html.twig' %}

{% block title %}Product{% endblock %}

{% block body %}
    <div class='container'>
      <br>   <br>
    <h1>Product</h1>
      <br>   <br>
    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ product.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ product.name }}</td>
            </tr>
                        <tr>
                <th>Image</th>
                <td  class="card" style="width: 18rem"> {% if product.image %}
                            <img src="{{ asset('uploads/images/' ~ product.image) }}" alt="{{ product.name }}" style="width: 50%; height: auto;">
                        {% else %}
                            <p>Pas d'image disponible</p>
                        {% endif %}</td> 
            </tr>

            <tr>
                <th>Description</th>
                <td>{{ product.description }}</td>
            </tr>

            <tr>
            <th>Stock</th>
            <th> {% if product.stock > 0 %}
                   <p class='fw-bold'>  {{ product.stock }} <p>
                    {% else %}
                <p class='fw-bold text-danger'> En rupture de stock</p>
                {% endif %}</th>
            </tr>

            <tr>
                <th>Price</th>
                <td>{{ product.price }}</td>
            </tr>
        </tbody>
    </table>

    <a class='btn btn-outline-primary'  href="{{ path('app_product_index') }}">back to list</a>
  
    <a class='btn btn-warning'  href="{{ path('app_product_edit', {'id': product.id}) }}">edit</a>
    <br>
    <a class='btn btn-warning'  href="{{ path( 'app_product_stock_add_history', {'id': product.id}) }}">afficher l'historique des stock</a>
    <br>
    {{ include('product/_delete_form.html.twig') }}
    </div>
{% endblock %}
